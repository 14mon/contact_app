<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Button Styles -->
    <style name="Widget.ContactApp.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.ContactApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Custom Card Styles -->
    <style name="Widget.ContactApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.ContactApp.Card.Welcome" parent="Widget.ContactApp.Card">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <!-- Text Input Layout Styles -->
    <style name="Widget.ContactApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <!-- Floating Action Button Styles -->
    <style name="Widget.ContactApp.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Widget.ContactApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
    </style>

    <!-- Custom Text Appearances -->
    <style name="TextAppearance.ContactApp.WelcomeTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="TextAppearance.ContactApp.WelcomeSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="TextAppearance.ContactApp.ContactName" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.ContactApp.ContactDetail" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.ContactApp.ContactEmail" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Avatar Styles -->
    <style name="Widget.ContactApp.Avatar" parent="">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.ContactApp.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

</resources>